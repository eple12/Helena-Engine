{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Texel Tuner",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++20",
                "-o",
                "texel-tuner-main/bin/tuner.exe",
                "texel-tuner-main/src/main.cpp",
                "texel-tuner-main/src/tuner.cpp",
                "texel-tuner-main/src/threadpool.cpp",
                "texel-tuner-main/src/engines/helena.cpp",
                "texel-tuner-main/src/engines/fourku.cpp",
                "texel-tuner-main/src/engines/fourkdotcpp.cpp",
                "texel-tuner-main/src/engines/toy.cpp",
                "texel-tuner-main/src/engines/toy_tapered.cpp",
                "-I",
                "texel-tuner-main/src",
                "-O3"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Builds the texel-tuner-main executable."
        }
    ]
}